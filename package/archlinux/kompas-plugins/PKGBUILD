# Author: mosra <mosra@centrum.cz>
pkgname=kompas-plugins
pkgver=0.1
pkgrel=1
pkgdesc="Plugins for Kompas navigation software"
arch=('i686' 'x86_64')
url="http://mosra.cz/blog/kompas.php"
license=('LGPLv3')
makedepends=('cmake')
depends=('kompas-core')
conflicts=('kompas-plugins-git')
source=("https://github.com/mosra/${pkgname}/tarball/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
md5sums=('ad3d32edb624dad007c69cd6881fe65c')

build() {
    mkdir -p "${srcdir}/build"
    cd "${srcdir}/build"

    cmake -DCMAKE_INSTALL_PREFIX=/usr ../mosra-${pkgname}-*
    make
}

package() {
    cd "$srcdir/build"
    make DESTDIR="$pkgdir/" install
}
